{
  "compilerOptions": {
    "module": "amd",
    "target": "es2015",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "bookmarklet/dist",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}